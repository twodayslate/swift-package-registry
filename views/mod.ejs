<div class="container" id="packages">
	<h2>Processing Swift Packages</h2>
	<table class="table table-responsive table-striped table-hover">
		<thead class="thead-dark">
			<tr>
				<th scope="col">ID</th>
				<th scope="col">Repository</th>
				<th scope="col">Description</th>
				<th scope="col"></th>
				<% if (locals.user && user.isAdmin) { %>
				<th scope="col"></th>
				<% } %>
			</tr>
		</thead>
		<tbody>
	  <% processing_packages.forEach(function(package){ %>
		<tr>
			<td><%= package.id %></td>
			<td><% if(package.info) { %><a href="/<%= package.info.full_name %>"><%= package.info.full_name %></a><% } %></td>

			<td><% if(package.info) { %><%= package.info.description %><% } %></td>
			<td>
				<form action="/add" method="POST">
				<% if(package.info) { %>
					<input type="hidden" id="url" name="url" value="<%= package.info.html_url %>"/>
				<% } else { %>
					<input type="hidden" id="url" name="url" value="https://github.com/<%= package.full_name || package.name %>"/>
				<% } %>
					<input type="hidden" id="reprocess" name="reprocess" value="True" />
					<button type="submit" class="btn btn-primary">Process</button>
				</form>
			</td>
			<% if (locals.user && user.isAdmin) { %>
				<td><form action="/delete/<%= package.id %>" method="POST"><button type="submit" class="btn btn-danger">Delete</button></form></td>
			<% } %>
		</tr>
	  <% }); %>
	  </tbody>
	</table>

	<div class="d-flex justify-content-between align-items-center mb-3">
		<h2>All Swift Packages</h2>
		<div class="btn-group" role="group" aria-label="Package filters">
			<a href="/mod?filter=all" class="btn <%= (locals.current_filter === 'all' || !locals.current_filter) ? 'btn-primary' : 'btn-outline-primary' %>">All</a>
			<a href="/mod?filter=errors" class="btn <%= locals.current_filter === 'errors' ? 'btn-danger' : 'btn-outline-danger' %>">Errors Only</a>
			<a href="/mod?filter=no-errors" class="btn <%= locals.current_filter === 'no-errors' ? 'btn-success' : 'btn-outline-success' %>">No Errors</a>
		</div>
	</div>

	<table class="table table-responsive table-striped table-hover">
		<thead class="thead-dark">
			<tr>
				<th scope="col">ID</th>
				<th scope="col">Repository</th>
				<th scope="col">Description</th>
				<th scope="col">Error</th>
				<th scope="col"></th>
				<% if (locals.user && user.isAdmin) { %>
				<th scope="col"></th>
				<% } %>
			</tr>
		</thead>
		<tbody>
	  <% all_packages.forEach(function(package){ %>
		<tr<% if(package.error) { %> class="table-warning"<% } %>>
			<td><%= package.id %></td>
			<td><% if(package.info) { %><a href="/<%= package.info.full_name %>"><%= package.info.full_name %></a><% } else { %><%= package.full_name %><% } %></td>
			<td><% if(package.info) { %><%= package.info.description %><% } %></td>
			<td><% if(package.error) { %><span class="text-danger"><%= package.error %></span><% } %></td>
			<td>
				<form action="/add" method="POST">
				<% if(package.info) { %>
					<input type="hidden" id="url" name="url" value="<%= package.info.html_url %>"/>
				<% } else { %>
					<input type="hidden" id="url" name="url" value="https://github.com/<%= package.full_name || package.name %>"/>
				<% } %>
					<input type="hidden" id="reprocess" name="reprocess" value="True" />
					<button type="submit" class="btn btn-primary">Process</button>
				</form>
			</td>
			<% if (locals.user && user.isAdmin) { %>
				<td><form action="/delete/<%= package.id %>" method="POST"><button type="submit" class="btn btn-danger">Delete</button></form></td>
			<% } %>
		</tr>
	  <% }); %>
	  </tbody>
	</table>
</div>